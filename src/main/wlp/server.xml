<server>

    <featureManager>
        <feature>servlet-3.1</feature>
    	<feature>jaxrs-2.0</feature>
    </featureManager>

    <httpEndpoint id="defaultHttpEndpoint"
                  host="*"
                  httpPort="9080">
        <tcpOptions soReuseAddr="true"/>
    </httpEndpoint>
    
    <application name="EasyCountServer" context-root="/EasyCountServer" location="${appLocation}" type="war"/>
</server>
